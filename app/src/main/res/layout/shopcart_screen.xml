<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F2F3">


    <!--todo : phonePanierView-->

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Votre panier est vide"
        android:textSize="25sp"

        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2">

    </TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="28dp"
        android:text="Mon panier"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/telList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="25dp"
        android:divider="#00000000"
        android:dividerHeight="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"

        app:layout_constraintBottom_toTopOf="@+id/htPrice"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        />

    <TextView
        android:id="@+id/htPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prix HT : ?$"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/ttcPrice" />

    <TextView
        android:id="@+id/ttcPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prix TTC : ?$"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/emptyText">

    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            style="@style/buttonStyle"
            android:id="@+id/command"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commander" />

        <Space
            android:layout_width="50dp"
            android:layout_height="0dp" />

        <Button
            style="@style/buttonStyle"
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vider le panier" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>